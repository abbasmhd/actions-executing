        "@angular/platform-browser": "^17.3.11",
        "@angular/platform-browser-dynamic": "^17.3.11",
        "@angular/router": "^17.3.11",
        "@ngxs/logger-plugin": "^18.0.0",
        "@ngxs/store": "^18.0.0",
        "bootstrap": "^4.3.1",
        "core-js": "^3.6.0",
        "rxjs": "^6.5.3",
        "standard-version": "^9.5.0",
        "tslib": "^2.0.0",
        "zone.js": "~0.14.7"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.3.8",
