        "husky": "^3.1.0",
        "jest": "^29.7.0",
        "jest-preset-angular": "^14.1.1",
        "lint-staged": "^9.2.5",
        "ng-packagr": "^17.3.0",
        "prettier": "^1.18.2",
        "start-server-and-test": "^1.10.0",
        "ts-node": "^8.3.0",
        "typescript": "~5.4.5"
    }
